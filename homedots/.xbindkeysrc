# volume
"amixer set Master 1%+"
   XF86AudioRaiseVolume

"amixer set Master 1%-"
   XF86AudioLowerVolume

"amixer set Master toggle"
   XF86AudioMute

"amixer set Capture toggle"
   XF86AudioMicMute

# brightness
"lux -a 5%"
   XF86MonBrightnessUp

"lux -s 5%"
   XF86MonBrightnessDown

# playback
"playerctl play-pause"
   XF86AudioPlay

"playerctl previous"
   XF86AudioPrev

"playerctl next"
   XF86AudioNext
